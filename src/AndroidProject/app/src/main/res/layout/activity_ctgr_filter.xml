<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CtgrFilterActivity">

    <TextView
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:textColor="@color/primary_text"
        android:text="Activity Type"
        android:id="@+id/ctgActivityTypeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner
        android:layout_below="@+id/ctgActivityTypeTv"
        android:gravity="center"
        android:layout_margin="8dp"
        android:id="@+id/ctgSpinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_margin="8dp"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        android:text="Max Distance (In Km)"
        android:layout_below="@id/ctgSpinner1"
        android:id="@+id/ctgActivityDistTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner
        android:layout_below="@+id/ctgActivityDistTv"
        android:gravity="center"
        android:layout_margin="10dp"
        android:id="@+id/ctgSpinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/ctgFilterBtn"
        android:text="Filter"
        android:layout_margin="8dp"
        android:layout_below="@id/ctgSpinner2"
        android:layout_width="100dp"
        android:layout_height="45dp"/>

</RelativeLayout>